// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  comments  Comment[]
}

model FashionItem {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String?
  colors      String?
  price       Float?
  image       String?
  createdAt   DateTime @default(now())
  comments    Comment[]
}

model Comment {
  id             Int          @id @default(autoincrement())
  text           String
  createdAt      DateTime     @default(now())
  customerId     Int
  customer       Customer     @relation(fields: [customerId], references: [id])
  fashionItemId  Int
  fashionItem    FashionItem  @relation(fields: [fashionItemId], references: [id])
}

// Newsletter subscriber
model Subscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

// Review model (only ONCE)
model Review {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  clerkId  String @unique        // store Clerk user.id here
  email    String?
  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String   // e.g., "Alex started following you."
  userId    String   // Clerk user ID of the recipient
  read      Boolean  @default(false) // whether the alert has been seen
  createdAt DateTime @default(now()) // timestamp when alert was created
}


