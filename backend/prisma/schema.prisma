generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        Int      @id @default(autoincrement())
  category  String
  text      String
  createdAt DateTime @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
} 

model Friend {
  id     Int    @id @default(autoincrement())
  userId String
  name   String
}  

